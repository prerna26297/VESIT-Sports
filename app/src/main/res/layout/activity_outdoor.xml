<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.vesitsports.Outdoor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Football(Boys)"
                android:paddingTop="10dp"
                android:id="@+id/football"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volleyball(Boys)"
                android:paddingTop="20dp"
                android:id="@+id/volleyball"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kabaddi(Boys)"
                android:paddingTop="20dp"
                android:id="@+id/kabaddi"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cricket(Boys/Girls)"
                android:paddingTop="20dp"
                android:id="@+id/cricket"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Handball(Boys/Girls)"
                android:paddingTop="20dp"
                android:id="@+id/handball"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Throwball(Girls)"
                android:paddingTop="20dp"
                android:id="@+id/throwball"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dodgeball(Girls)"
                android:paddingTop="20dp"
                android:id="@+id/dodgeball"/>

        </LinearLayout>



    </ScrollView>

</RelativeLayout>
